extends layout

block content
    h1 Delete Bookinstance: #{bookinstance._id}
    p #[strong Title:]
        a(href=book.url)  #{bookinstance.book.title}
    p #[strong Author:]
        a(href=book.author.url)  #{book.author.name}
    
    p Do you really want to delete this Bookinstance?

        form(method='POST' action='')
            div.form-group
                input#bookinstanceid.form-control(type='hidden', name='bookinstanceid', required='true', value=bookinstance._id)

            button.btn.btn-primary(tyoe='submit') Delete
    
